@model IEnumerable<MVCReviewSite.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Create New", "Create")

@foreach (var item in Model)
{
	<div class="row panel">
		<div class="panel-heading">
			<p>@Html.DisplayFor(modelItem => item.Category.Name)</p>
		</div>
		<div class="col-lg-1">
			<p>@Html.DisplayNameFor(model => model.Rating)</p>
		</div>
		<div class="col-lg-11">
			<p>@Html.DisplayNameFor(model => model.Title)</p>
		</div>
		<div class="col-lg-12">
			<p>By @Html.DisplayNameFor(model => model.ReviewerName) on @Html.DisplayFor(modelItem => item.PublishDate)</p>
		</div>
		<div class="col-lg-12">
			<p>@Html.DisplayFor(modelItem => item.Content)</p>
		</div>
		<div class="col-lg-12">
			<p>
				@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
				@Html.ActionLink("Details", "Details", new { id = item.ID }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.ID })
			</p>
		</div>
	</div>
}

