@model IEnumerable<MVCReviewSite.Models.Review>

@{
	ViewBag.Title = "Index";
}

<div class="gold-border spaced-box">
	<div class="well gold-box">
		<h2>Reviews Index</h2>
		@Html.ActionLink("Create New", "Create")
	</div>
</div>

@foreach (var item in Model)
{
	<div class="outer-border spaced-box">
		<div class="row panel review-box">

			<div class="panel-heading">
				<p><h2>@Html.DisplayFor(modelItem => item.Category.Name)</h2></p>
			</div>
			<div class="col-lg-1 rating">
				<p>@Html.DisplayFor(modelItem => item.Rating) / 5</p>
			</div>
			<div class="col-lg-11 title">
				<p>@Html.DisplayFor(modelItem => item.Title)</p>
			</div>
			<div class="col-lg-12 reviewed-by">
				<p>By @Html.DisplayFor(modelItem => item.ReviewerName) on @Html.DisplayFor(modelItem => item.PublishDate.Date)</p>
			</div>
			<div class="col-lg-12 content">
				<p>@Html.DisplayFor(modelItem => item.Content)</p>
			</div>
			<div class="col-lg-12 edit-bar">
				<p>
					@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
					@Html.ActionLink("Details", "Details", new { id = item.ID }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.ID })
				</p>
			</div>
		</div>
	</div>
}

